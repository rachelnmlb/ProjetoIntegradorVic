<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="poster_detail" parent="">
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>
    <style name="actor_txt">
        <item name="android:textSize">@dimen/small_sp</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="system_falied">
        <item name="android:layout_marginTop">@dimen/xlarge</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/failed</item>
        <item name="android:textSize">@dimen/large</item>
    </style>
    <style name="system_falied_txt">
        <item name="android:text">@string/try_again_msg</item>
        <item name="android:textColor">@color/black_50_opacity</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/small</item>
    </style>
    <style name="try_again_style">
        <item name="android:text">@string/try_again</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="background_custom_chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/backgroud_chip_color</item>
        <item name="android:textColor">@color/text_chip_color</item>
    </style>
    <style name="custom_tab_text_layout" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_sp</item>
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="android:layout_marginHorizontal">@dimen/large</item>
        <item name="android:layout_marginVertical">@dimen/xxlarge</item>
    </style>
    <style name="genre_detail">
        <item name="android:layout_marginHorizontal">@dimen/small</item>
        <item name="android:layout_marginTop">@dimen/small</item>
        <item name="android:paddingHorizontal">@dimen/small</item>
        <item name="android:paddingVertical">@dimen/xxsmall</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textColor">@color/black_50_opacity</item>
    </style>
    <style name="rounded_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">48dp</item>
        <item name="cornerSizeTopLeft">48dp</item>
    </style>
    <style name="card_rating" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/rounded_corners</item>
    </style>
</resources>